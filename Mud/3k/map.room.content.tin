#ALIAS {.mapRoomItem}
{
  #VAR {map[room][roomnote][content][item][%2][name]} {%3};
  #IF {"$map[edit]" == "1"}
  {
    #MAP SET {roomnote} {$map[room][roomnote]};
  };
};
event_register {e_room_item} {h_map_room_item} {.mapRoomItem};

